#!/bin/bash

i=0
# ls -la | egrep "^d" | awk '{print $NF}' 
# exit
# echo $PWD
# echo "-----=-----"
# ls -la | egrep "^d" | awk '{print $NF}' 
# echo "-----=-----"
for direc in $(ls -la | egrep "^d" | awk '{print $NF}' )
do
  # loops only direcectories
  if [[ ! -L $direc  && $direc != '..' && $direc != '.' ]] ; then
    cd $direc
    gir
    cd ..
    let i++
  fi
done

if [[ i -eq 0 ]] ; then
  # check the current direcectory if no directories found
  gir
fi
